.app {
  padding: 5rpx;
}
.app swiper {
  height: 700rpx;
}
.app swiper .swiper-item,
.app swiper image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.app .main {
  padding: 8rpx;
  margin-bottom: 100rpx;
}
.app .main .title {
  display: flex;
  margin-top: 20rpx;
}
.app .main .title .title-left .title-left-item {
  display: flex;
  text-align: center;
}
.app .main .title .title-right .title-right-item {
  display: flex;
  margin-left: 160rpx;
  margin-top: 30rpx;
}
.app .main .headline .text {
  display: flex;
  font-size: 20rpx;
  color: #707070;
  font-weight: 700;
  margin-top: 15rpx;
}
.app .main .attention {
  display: flex;
  justify-content: space-between;
  height: 50rpx;
  margin-bottom: 35rpx;
}
.app .main .attention .attention-item {
  margin-left: 15rpx;
  margin-top: 30rpx;
  line-height: 50rpx;
}
.app .main .Live {
  padding: 5rpx;
}
.app .main .Live .Live-itme {
  height: 40rpx;
  margin-left: 15rpx;
  display: flex;
  justify-content: space-between;
}
.app .main .Live .Live-itme-text {
  margin-left: 12rpx;
  font-size: 25rpx;
  margin-top: 15rpx;
  margin-bottom: 20rpx;
}
.app .main .product {
  padding: 8rpx;
}
.app .main .product .product-item {
  display: flex;
  justify-content: space-between;
}
.app .main .product .product-item .product-item-title {
  display: flex;
}
.app .main .videoTask {
  padding: 8rpx;
}
.app .main .videoTask .videoTask-item {
  display: flex;
  justify-content: space-between;
}
.app .main .videoTask .videoTask-item .videoTask-item-title {
  display: flex;
}
.app .footer {
  display: flex;
  padding: 8rpx;
}
.app .footer .footer-left {
  width: 240rpx;
  text-align: center;
}
.app .footer .footer-right {
  margin-top: 15rpx;
  width: 450rpx;
  background-color: #0000FF;
  height: 100rpx;
  text-align: center;
}
.app .footer .footer-right .footer-right-button {
  color: #fff;
}

