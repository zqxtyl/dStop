.app swiper {
  height: 386rpx;
}
.app swiper .swiper-item,
.app swiper image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.app .main {
  display: flex;
  justify-content: space-between;
  margin-top: 25rpx;
}
.app .goods {
  background-color: #F5F5F5;
}
.app .iconfont {
  font-family: "iconfont" !important;
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  line-height: 14rpx;
  color: lightgray;
}
.app .icon-jiangxu:before {
  content: "\e6cc";
}
.app .icon-shengxu:before {
  content: "\e6cf";
}
.app .black {
  color: black;
}
.app .blue {
  color: blue;
}
.app .gray {
  color: lightgray;
}
.app .tab {
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: center;
}
.app .tab-item {
  display: inline-flex;
  width: 20%;
  height: 88rpx;
  margin: 0 20rpx;
  font-size: 25rpx;
}
.app .tab-txt {
  line-height: 88rpx;
}
.app .icon {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

