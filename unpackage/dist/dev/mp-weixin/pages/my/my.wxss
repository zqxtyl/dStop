.app {
  background-color: #F5F5F5;
  height: 1500rpx;
}
.app .title {
  width: 750rpx;
  height: 264rpx;
  background-color: #fff;
}
.app .title .titie-item {
  width: 750rpx;
  height: 50rpx;
  background-color: #fff;
  border-radius: 15rpx;
  position: relative;
}
.app .title .titie-item .title-bottom {
  padding: 20rpx;
  width: 750rpx;
  height: 230rpx;
  background-color: #fff;
  position: absolute;
  top: 15rpx;
}
.app .title .titie-item .title-bottom .title-box {
  display: flex;
  justify-content: space-between;
}
.app .title .titie-item .title-bottom .title-box .title-box-text {
  font-weight: 700;
  font-size: 32rpx;
  margin-left: 15rpx;
}
.app .title .titie-item .title-bottom .title-box .title-box-right {
  display: flex;
  align-items: center;
  margin-right: 50rpx;
  color: #676767;
  font-size: 25rpx;
}
.app .title .titie-item .title-bottom .title-bottom-item {
  margin-top: 46rpx;
  display: flex;
  justify-content: space-around;
  text-align: center;
  margin-right: 30rpx;
  font-size: 25rpx;
}
.app .title .titie-item .title-bottom .title-bottom-item image {
  width: 52rpx;
  height: 52rpx;
}
.app .main {
  background-color: #fff;
  margin-top: 45rpx;
  padding: 20rpx;
}
.app .main .main-top {
  display: flex;
  justify-content: space-between;
}
.app .main .main-top .main-top-title {
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-weight: 700;
  font-size: 30rpx;
}
.app .main .main-top .main-top-right {
  display: flex;
  align-items: center;
  color: #676767;
  margin-right: 15rpx;
}
.app .main .main-top .main-bottom {
  display: flex;
  justify-content: space-between;
  margin-top: 44rpx;
  align-items: center;
}
.app .main .main-top .main-bottom .main-bottom-item {
  width: 150rpx;
  height: 64rpx;
  background-color: #E62828;
  border-radius: 8rpx;
  margin-right: 10rpx;
}
.app .payload {
  background-color: #fff;
  margin-top: 25rpx;
  padding: 20rpx;
}
.app .payload .payload-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 20rpx;
  margin-top: 15rpx;
}
.app .footer {
  width: 750rpx;
  height: 160rpx;
  background-color: #fff;
  margin-top: 25rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.app .footer .footer-item {
  margin-top: 10rpx;
  text-align: center;
}

